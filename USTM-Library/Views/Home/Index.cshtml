@model IEnumerable<bibliography>
@{
    ViewData["Title"] = "Home Page";
}

<body>
	<section class="padding">

		<div class="container padding">
			<a href="#" class="logo"><img src="img/logo1.png" alt="USTM"></a>

			<hr> 
			
			<h2 class="padding">Livros Mais Alugados</h2>

			<ul class="livros">
				@foreach (var bibliography in Model)
				{
					<li>
						<h3>@bibliography.Title</h3>
						<h4>@bibliography.Author</h4>
						<a asp-controller="Home" asp-action="Details" asp-route-id="@bibliography.Id">
							<div class="imghover" title="@bibliography.Title"></div>
							<img src=@bibliography.PicUrl alt="@bibliography.Title">
						</a>
					</li>
				}
			
			</ul>

			<hr>
			<div class="info">
				<div class="container">
					<img src="img/livro.jpg">

					<h1>Como Funciona?</h1>
